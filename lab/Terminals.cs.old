// has all the Terminals
namespace lab {
public static class Terminals{
    // this makes them
    public static void makeAllOfTheTerminals() {
        Grammar.addTerminals( new Terminal[] {
            new("ADDOP", @"[-+]" ),
            //x= verbose mode
            //s = dotall mode
            new("COMMENT", @"(?sx)
                //[^\n]*
                |
                /[*] .*? [*]/
            "),
            new("IF", @"\bif\b"),
            new("ELSE", @"\belse\b"),
            new("EQ", "="),

            new("FLOAT", @"(?ix)
                -?\d+\.\d+    |         #decimal: 123.45
                -?\d+(\.\d*)?e-?\d+    #exponential: 123E45
            "),

            new("MULOP", "[*/%]" ),
            new("NOT", "!(?!=)"),
            new("NUM", @"[0-9]+" ), // = (0|...|9)+ = \d+
            new("SEMI", ";"),
            new("RELOP", @"<=|>=|<(?!=<)|<|>|!==|!=|===|==" ),
            new("SHIFTOP", @">>>|<<<|<<|>>" ),
            //last
            new("ID", @"(?!\d)\w+" )
        });
    }
}
}